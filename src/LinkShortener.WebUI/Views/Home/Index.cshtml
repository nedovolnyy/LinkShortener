@inject IShortUrlService ShortUrlService

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table>
        <thead>
            <tr>
                <th>Url</th>
                <th>Short Url</th>
                <th>Date</th>
                <th>Counter</th>
                <th>
                    <a class="btn btn-sm btn-primary" asp-area="" asp-controller="UrlsManagement" asp-action="Insert">Add URL</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var shortUrl in Model)
                {
                    <tr>
                        <th>@shortUrl.Url</th>
                        <th>
                            <a class="nav-link text-decoration-underline" asp-area="" asp-controller="UrlsManagement" asp-action="IncrementCounter" asp-route-shortUrlId="@shortUrl.Id">@shortUrl.TinyUrl</a>
                        </th>
                        <th>@shortUrl.Date</th>
                        <th>@shortUrl.Counter</th>
                        <th>
                            <form asp-action="Delete" asp-controller="UrlsManagement" asp-route-shortUrlId="@shortUrl.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="UrlsManagement" asp-route-shortUrlId="@shortUrl.Id">Edit</a>
                                <button type="submit" class="btn btn-sm btn-danger" onclick="@Html.Raw("return confirm('Are you sure you want to delete this URL?')")">Delete</button>
                            </form>
                        </th>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
